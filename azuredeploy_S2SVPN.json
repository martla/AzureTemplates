{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vpnType": {
      "type": "string",
      "metadata": {
        "description": "Route based or policy based"
      },
      "defaultValue": "RouteBased"
    },
    "localGatewayName": {
      "type": "string",
      "metadata": {
        "description": "Arbitrary name for the local gateway resource."
      }
    },
    "localGatewayIpAddress": {
      "type": "string",
      "metadata": {
        "description": "Public IP of the local VPN gateway."
      }
    },
    "localAddressPrefix": {
      "type": "array",
      "metadata": {
        "description": "CIDR block representing the address space of the on-premise VPN network's subnet"
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "vnet-core",
      "metadata": {
        "description": "Arbitrary name for the Azure Virtual Network"
      }
    },
    "gatewayPublicIPName": {
      "type": "string",
      "metadata": {
        "description": "Arbitrary name for public IP resource used for the new azure gateway"
      }
    },
    "gatewayName": {
      "type": "string",
      "metadata": {
        "description": "Arbitrary name for the new gateway"
      }
    },
    "gatewaySku": {
      "type": "string",
      "defaultValue": "VpnGw1",
      "allowedValues": [
        "Basic",
        "VpnGw1",
        "VpnGw2",
        "VpnGw3"
      ],
      "metadata": {
        "description": "The Sku of the Gateway. This must be one of Basic, VpnGw1, VpnGw2, or VpnGw3."
      }
    },
    "connectionName": {
      "type": "string",
      "metadata": {
        "description": "Arbitrary name for the new connection between Azure VNet and the on-premises network"
      }
    },
    "sharedKey": {
      "type": "securestring"
    }
  },
  "variables": {
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "gatewaySubnetRef": "[concat(variables('vnetID'),'/subnets/','GatewaySubnet')]"
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/localNetworkGateways",
      "name": "[parameters('localGatewayName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "localNetworkAddressSpace": {
          "addressPrefixes": "[parameters('localAddressPrefix')]"
        },
        "gatewayIpAddress": "[parameters('localGatewayIpAddress')]"
      }
    },
    {
      "apiVersion": "2017-03-01",
      "name": "[parameters('connectionName')]",
      "type": "Microsoft.Network/connections",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworkGateways/', parameters('gatewayName'))]",
        "[concat('Microsoft.Network/localNetworkGateways/', parameters('localGatewayName'))]"
      ],
      "properties": {
        "virtualNetworkGateway1": {
          "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', parameters('gatewayName'))]"
        },
        "localNetworkGateway2": {
          "id": "[resourceId('Microsoft.Network/localNetworkGateways', parameters('localGatewayName'))]"
        },
        "connectionType": "IPsec",
        "sharedKey": "[parameters('sharedKey')]",
        "RoutingWeight": 10
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[parameters('gatewayPublicIPName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/virtualNetworkGateways",
      "name": "[parameters('gatewayName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/', parameters('gatewayPublicIPName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('gatewaySubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('gatewayPublicIPName'))]"
              }
            },
            "name": "gwfleetboardipconfig"
          }
        ],
        "sku": {
          "name": "[parameters('gatewaySku')]",
          "tier": "[parameters('gatewaySku')]"
        },
        "gatewayType": "Vpn",
        "vpnType": "[parameters('vpnType')]",
        "enableBgp": "false"
      }
    },
    {
      "apiVersion": "2016-09-01",
      "type": "Microsoft.Network/connections/providers/locks",
      "name": "[concat(parameters('connectionName'), '/Microsoft.Authorization/', parameters('connectionName'), '-Lock')]",
      "dependsOn": [
        "[concat('Microsoft.Network/connections/', parameters('connectionName'))]"
      ],
      "properties": {
        "level": "CanNotDelete",
        "notes": "VPN connections should not be deleted."
      }
    },
    {
      "apiVersion": "2016-09-01",
      "type": "Microsoft.Network/publicIPAddresses/providers/locks",
      "name": "[concat(parameters('gatewayPublicIPName'), '/Microsoft.Authorization/', parameters('gatewayPublicIPName'), '-Lock')]",
      "dependsOn": [
        "[concat('Microsoft.Network/connections/', parameters('connectionName'))]"
      ],
      "properties": {
        "level": "CanNotDelete",
        "notes": "Public IP for VPN connection should not be deleted."
      }
    },
    {
      "apiVersion": "2016-09-01",
      "type": "Microsoft.Network/virtualNetworkGateways/providers/locks",
      "name": "[concat(parameters('gatewayName'), '/Microsoft.Authorization/', parameters('gatewayName'), '-Lock')]",
      "dependsOn": [
        "[concat('Microsoft.Network/connections/', parameters('connectionName'))]"
      ],
      "properties": {
        "level": "CanNotDelete",
        "notes": "VPN Gateway should not be deleted."
      }
    },
    {
      "apiVersion": "2016-09-01",
      "type": "Microsoft.Network/localNetworkGateways/providers/locks",
      "name": "[concat(parameters('localGatewayName'), '/Microsoft.Authorization/', parameters('localGatewayName'), '-Lock')]",
      "dependsOn": [
        "[concat('Microsoft.Network/connections/', parameters('connectionName'))]"
      ],
      "properties": {
        "level": "CanNotDelete",
        "notes": "Local VPN Gateway should not be deleted."
      }
    }
  ]
}
